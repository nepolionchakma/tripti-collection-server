generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_AIVEN")
  schemas  = ["public"]
}

model test {
  id          Int     @id
  name        String?
  description String?

  @@schema("public")
}

model users {
  id           Int       @id @default(autoincrement())
  user_name    String    @db.VarChar(50)
  first_name   String    @db.VarChar(50)
  last_name    String    @db.VarChar(50)
  email        String    @unique @db.VarChar(100)
  picture      String?
  profile_type Json?
  access_token String
  created_at   DateTime? @default(now()) @db.Timestamp(6)

  @@schema("public")
}

model products {
  product_id           Int       @id @default(autoincrement())
  title                String    @db.VarChar(255)
  categories           Json?
  collections          Json?
  prices               Json?
  sizes                Json?
  colors               Json?
  materials            Json?
  editions             Json?
  offer                Json?
  features             Json?
  img                  String?
  images               Json?
  stock_quantity       Int?
  rating               Json?
  description          String?
  tags                 Json?
  visibility           Boolean?  @default(true)
  is_available_product Boolean?  @default(true)
  is_featured_product  Boolean?
  created_at           DateTime? @default(now()) @db.Timestamp(6)
  updated_at           DateTime? @default(now()) @db.Timestamp(6)
  sections             Json?

  @@schema("public")
}

model categories {
  category_id   Int     @id @default(autoincrement())
  category_name String?

  @@schema("public")
}

model collections {
  collection_id   Int     @id @default(autoincrement())
  collection_name String?

  @@schema("public")
}

model colors {
  color_id   Int     @id @default(autoincrement())
  color_name String?

  @@schema("public")
}

model editions {
  edition_id   Int     @id @default(autoincrement())
  edition_name String?

  @@schema("public")
}

model features {
  feature_id   Int     @id @default(autoincrement())
  feature_name String?

  @@schema("public")
}

model materials {
  material_id   Int     @id @default(autoincrement())
  material_name String?

  @@schema("public")
}

model sections {
  section_id   Int     @id @default(autoincrement())
  section_name String?

  @@schema("public")
}

model sizes {
  size_id   Int     @id @default(autoincrement())
  size_name String?

  @@schema("public")
}
