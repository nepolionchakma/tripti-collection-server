generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_AIVEN")
  schemas  = ["public"]
}

model test {
  id          Int     @id
  name        String?
  description String?

  @@schema("public")
}

model users {
  id           Int       @id @default(autoincrement())
  user_name    String    @db.VarChar(50)
  first_name   String    @db.VarChar(50)
  last_name    String    @db.VarChar(50)
  email        String    @unique @db.VarChar(100)
  picture      String?
  profile_type Json?
  access_token String
  created_at   DateTime? @default(now()) @db.Timestamp(6)

  @@schema("public")
}

model products {
  product_id           Int       @id @default(autoincrement())
  title                String    @db.VarChar(255)
  categories           Json?
  collection           Json?
  prices               Json?
  sizes                Json?
  colors               Json?
  material             Json?
  edition              Json?
  offer                Json?
  features             Json?
  img                  String?
  images               Json?
  stock_quantity       Int?
  rating               Json?
  description          String?
  tags                 Json?
  visibility           Boolean?  @default(true)
  is_available_product Boolean?  @default(true)
  is_featured_product  Boolean?
  created_at           DateTime? @default(now()) @db.Timestamp(6)
  updated_at           DateTime? @default(now()) @db.Timestamp(6)

  @@schema("public")
}
